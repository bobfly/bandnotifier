<div class="col-sm-12 text-center">
  <h1>Band notifier</h1>
  <%= render "carousel" %>  
</div>
<div class="col-sm-12 text-center">
  <% if @upcoming_gigs.blank? %>
    <div class="col-sm-12 text-center">
      <h3>Nema svirki, vatajte se birtija</h3>  
    </div>
  <% else %>
    <div class="col-sm-12 col-md-12 col-lg-8 offset-lg-4">
      <table class="table table-striped table-responsive">
        <thead>
          <tr>
            <th>Datum</th>
            <th>Naslov</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @upcoming_gigs.each do |gig| %>
            <tr>
              <td>
                <%= link_to gig.gig_date.strftime("%-d.%-m.%Y."), gig_path(gig), remote: true %>
              </td>
              <td>
                <%= gig.name %>
              </td>
              <td>
                <%= link_to t("edit"), edit_gig_path(gig), class: "btn btn-primary" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  <% end %>
</div>