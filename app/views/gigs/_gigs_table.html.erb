<table class="table table-striped table-responsive">
  <thead>
    <tr>
      <th>Datum</th>
      <th>Naslov</th>
      <th>Cijena</th>
      <th>Valuta</th>
      <th>Javna?</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% gigs.each do |gig| %>
      <tr>
        <td>
          <%= link_to gig.gig_date.strftime("%-d.%-m.%Y."), gig_path(gig), remote: true %>
        </td>
        <td>
          <%= gig.name %>
        </td>
        <td>
          <%= gig.price %>
        </td>
        <td>
          <%= gig.currency %>
        </td>
        <td>
          <%= gig.public == true ? "Da" : "Ne" %>
        </td>
        <td>
          <%= link_to t("edit"), edit_gig_path(gig), class: "btn btn-primary" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>